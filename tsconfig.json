{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "esnext",
		"target": "es2016",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/types/global.d.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
